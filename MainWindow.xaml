<Window x:Class="FreeCut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FreeCut - PPT自动裁剪PDF导出工具"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Icon="icon.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Name="btnOpenFile" Content="📁 打开PPT文件" Click="BtnOpenFile_Click" Width="120"/>
                <TextBlock Name="lblFileName" Text="请选择PowerPoint文件..." VerticalAlignment="Center" Margin="15,0"/>
                <Button Name="btnRefresh" Content="🔄 刷新" Click="BtnRefresh_Click" Width="80" IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：幻灯片列表 -->
            <GroupBox Grid.Column="0" Header="幻灯片列表">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button Name="btnSelectAll" Content="全选" Click="BtnSelectAll_Click" Width="50" IsEnabled="False"/>
                        <Button Name="btnSelectNone" Content="全不选" Click="BtnSelectNone_Click" Width="60" IsEnabled="False"/>
                        <TextBlock Name="lblSlideCount" Text="共 0 张" VerticalAlignment="Center" Margin="10,0"/>
                    </StackPanel>

                    <ListBox Name="listSlides" Grid.Row="1" Margin="0,5,0,0"
                             SelectionMode="Multiple" SelectionChanged="ListSlides_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Index}" Width="30" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Title}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="2" Name="lblSelectedCount" Text="已选择 0 张幻灯片" FontStyle="Italic"/>
                </Grid>
            </GroupBox>

            <!-- 中间：预览区域 -->
            <GroupBox Grid.Column="1" Header="预览" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnPreview" Content="🔍 预览裁剪效果" Click="BtnPreview_Click" IsEnabled="False"/>
                        <ComboBox Name="cmbPreviewSlide" Width="120" Margin="10,0" SelectionChanged="CmbPreviewSlide_SelectionChanged" IsEnabled="False"/>
                    </StackPanel>

                    <Border Grid.Row="1" Margin="0,10,0,0" BorderBrush="#DDDDDD" BorderThickness="1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Image Name="imgPreview" Stretch="Uniform" />
                        </ScrollViewer>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- 右侧：设置面板 -->
            <StackPanel Grid.Column="2">
                <!-- 裁剪设置 -->
                <GroupBox Header="裁剪设置">
                    <StackPanel>
                        <CheckBox Name="chkAutoDetect" Content="自动检测内容边界" IsChecked="True"
                                  Checked="ChkAutoDetect_CheckedChanged" Unchecked="ChkAutoDetect_CheckedChanged"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="上边距:"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtTopMargin" Text="10"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="像素"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="下边距:"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="txtBottomMargin" Text="10"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="像素"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="左边距:"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Name="txtLeftMargin" Text="10"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="像素"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="右边距:"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Name="txtRightMargin" Text="10"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="像素"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="检测容差:"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Name="txtTolerance" Text="5"/>
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="(0-50)"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 导出设置 -->
                <GroupBox Header="导出设置">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="PDF质量:" Width="70"/>
                            <Slider Name="sliderQuality" Width="120" Minimum="1" Maximum="100" Value="90"
                                    TickFrequency="10" IsSnapToTickEnabled="True"/>
                            <TextBlock Name="lblQuality" Text="90" Width="30" Margin="5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="导出DPI:" Width="70"/>
                            <ComboBox Name="cmbDPI" Width="100">
                                <ComboBoxItem Content="72" />
                                <ComboBoxItem Content="150" />
                                <ComboBoxItem Content="300" IsSelected="True"/>
                                <ComboBoxItem Content="600" />
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Name="chkPreserveRatio" Content="保持宽高比" IsChecked="True" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- 操作按钮 -->
                <GroupBox Header="操作">
                    <StackPanel>
                        <Button Name="btnExportPDF" Content="📄 导出PDF" Click="BtnExportPDF_Click"
                                Height="35" FontSize="14" IsEnabled="False"/>
                        <Button Name="btnSaveSettings" Content="💾 保存设置" Click="BtnSaveSettings_Click"
                                Height="30" Margin="0,5,0,0"/>
                        <Button Name="btnResetSettings" Content="🔄 重置设置" Click="BtnResetSettings_Click"
                                Height="30"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Name="lblStatus" Text="就绪" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="btnAbout" Content="ℹ️ 关于" Click="BtnAbout_Click" Width="60"/>
                    <Button Name="btnHelp" Content="❓ 帮助" Click="BtnHelp_Click" Width="60"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>